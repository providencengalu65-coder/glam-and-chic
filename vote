  <script>
    // R√©cup√©ration du vote depuis localStorage
    let votes = JSON.parse(localStorage.getItem('votes')) || { cat1: false, cat2: false };

    // Fonction pour fermer le message de bienvenue
    function closeWelcome() {
      document.getElementById('welcomeOverlay').style.display = 'none';
    }

    // Fonction vote avec localStorage
    function vote(choice, category) {
      if (votes[category]) return; // d√©j√† vot√© ‚Üí verrouillage silencieux

      votes[category] = true;
      localStorage.setItem('votes', JSON.stringify(votes));

      // Verrouillage des boutons de la cat√©gorie
      let parent = document.getElementById(category);
      parent.querySelectorAll('button').forEach(btn => {
        btn.disabled = true;
        btn.style.opacity = "0.6";
      });

      // Affichage message de fin si les deux votes faits
      if (votes.cat1 && votes.cat2) {
        document.getElementById('byeOverlay').style.display = 'flex';
      }
    }

    // Au chargement, verrouille les boutons d√©j√† vot√©s
    window.onload = () => {
      for (const cat in votes) {
        if (votes[cat]) {
          document.getElementById(cat).querySelectorAll('button').forEach(btn => {
            btn.disabled = true;
            btn.style.opacity = "0.6";
          });
        }
      }
    }
  </script>
